@model  IEnumerable<MySqlASPNetMVC.Models.Empresa>
@{
    ViewBag.Title = "Empresa";
}

<div class="page-header">
    <h1>Empresa <small>organize o cadastro de Empresas</small></h1>
    <a href="@Url.Action("Cadastrar","Empresa")" class="btn btn-sm btn-primary">Nova Empresa</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Empresas Cadastradas
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nome da Empresa</th>
                            <th>Cnpj da Empresa</th>
                            <th>UF da Empresa</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var x = 0;}
                        @foreach (var item in Model)
                        {
                            x++;
                            <tr>
                                <td style="width: 50px">@x</td>
                                <td><a href="@Url.Action("Detalhe", "Empresa", new { Id = item.Id })">@item.NOME_FANTASIA</a></td>
                                <td><a href="@Url.Action("Detalhe", "Empresa", new { Id = item.Id })">@item.CNPJ</a></td>
                                <td><a href="@Url.Action("Detalhe", "Empresa", new { Id = item.Id })">@item.DS_SIGLA</a></td>
                                <td style="width: 100px">
                                    <a href="@Url.Action("Editar", "Empresa", new { Id = item.Id })" class="btn btn-info btn-sm">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                    <a href="@Url.Action("Excluir", "Empresa", new { Id = item.Id })" class="btn btn-danger btn-sm">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
