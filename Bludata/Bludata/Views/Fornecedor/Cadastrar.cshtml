@model MySqlASPNetMVC.Models.Fornecedor
@{
    ViewBag.Title = "Cadastrar Fornecedor";
}

<div class="page-header">
    <h1>Fornecedor <small>organize o cadastro de fornecedors</small></h1>
</div>

<form method="POST" action="">
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Nova Fornecedor</legend>
        <div class="form-group">
            <label for="NM_FORNECEDOR">Nome da Fornecedor</label>
            <input id="NM_FORNECEDOR" name="NM_FORNECEDOR" type="text" class="form-control" placeholder="Digite o nome da Fornecedor">
            @Html.ValidationMessageFor(x => x.NM_FORNECEDOR)
        </div>
        <div class="form-group">
            <label for="CD_EMPRESA">EMPRESA</label>
            @Html.ValidationMessageFor(x => x.CD_EMPRESA)
            @Html.DropDownList("CD_EMPRESA", ViewBag.Empresas as SelectList)
        </div>
        <div class="form-group">
            <label for="NR_CNPJ">CNPJ</label>
            <input id="NR_CNPJ" name="NR_CNPJ" type="text" class="form-control" placeholder="DIGITE CNPJ">
            @Html.ValidationMessageFor(x => x.NR_CNPJ)
        </div>
        <hr />
        <p>
            <button type="submit" class="btn btn-sm btn-info">Salvar</button>
            <a href="@Url.Action("Index","Home")">Cancelar</a>
        </p>
    </fieldset>
</form>
