@model MySqlASPNetMVC.Models.Fornecedor
@{
    ViewBag.Title = "Editar Fornecedor";
}

<div class="page-header">
    <h1>Fornecedor <small>organize o cadastro de fornecedors</small></h1>
    <a href="@Url.Action("Cadastrar","Fornecedor")" class="btn btn-sm btn-primary">Nova Fornecedor</a>
</div>

<form method="POST" action="">
    @Html.ValidationSummary(true)
    <fieldset>

        <input id="Id" name="Id" type="hidden" value="@Model.Id" />

        <legend>Nova Fornecedor</legend>
        <div class="form-group">
            <label for="NM_FORNECEDOR">Nome de Fornecedor</label>
            <input id="NM_FORNECEDOR" name="NM_FORNECEDOR" type="text" value="@Model.NM_FORNECEDOR" class="form-control" placeholder="Digite o nome de Fornecedor">
            @Html.ValidationMessageFor(x => x.NM_FORNECEDOR)
            
        </div>
        <div class="form-group">
            <label for="CD_EMPRESA">EMPRESA</label>
            @Html.ValidationMessageFor(x => x.CD_EMPRESA)
            @Html.DropDownList("CD_EMPRESA", ViewBag.Empresas as SelectList)
        </div>
        <div class="form-group">
            <label for="NR_CNPJ">CNPJ</label>
            <input id="NR_CNPJ" name="NR_CNPJ" type="text" value="@Model.NR_CNPJ" class="form-control" placeholder="DIGITE CNPJ">
            @Html.ValidationMessageFor(x => x.NR_CNPJ)
            
        </div>
        <hr />
        <p>
            <button type="submit" class="btn btn-sm btn-info">Salvar</button>
            <a href="@Url.Action("Index","Home")">Cancelar</a>
        </p>
    </fieldset>
</form>
