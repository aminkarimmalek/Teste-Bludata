@model MySqlASPNetMVC.Models.Fornecedor
@{
    ViewBag.Title = "Excluir esta Fornecedor?";
}

<div class="page-header">
    <h1>Fornecedor <small>organize o cadastro de fornecedors</small></h1>
    <a href="@Url.Action("Cadastrar","Home")" class="btn btn-sm btn-primary">Nova Fornecedor</a>
</div>
<div class="alert alert-danger">
    <strong>Atenção!</strong> Deseja realmente excluir este registro?
</div>
<fieldset>
    <legend>Detalhes da Fornecedor</legend>
    <div class="form-group">
        <strong>Nome: </strong> @Model.NM_FORNECEDOR
    </div>
</fieldset>

<hr />
<form method="POST" action="">
    <input type="hidden" value="@Model.Id" name="Id" id="Id" />
    <p>
        <button type="submit" class="btn btn-sm btn-info">Excluir</button>
        <a href="@Url.Action("Index","Home")">Cancelar</a>
    </p>
</form>