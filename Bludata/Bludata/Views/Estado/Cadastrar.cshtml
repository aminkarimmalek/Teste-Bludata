@model MySqlASPNetMVC.Models.Estado
@{
    ViewBag.Title = "Cadastrar Estado";
}

<div class="page-header">
    <h1>Estado <small>organize o cadastro de estados</small></h1>
</div>

<form method="POST" action="">
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Nova Estado</legend>
        <div class="form-group">
            <label for="Nome">Nome da Estado</label>
            <input id="Nome" name="Nome" type="text" class="form-control" placeholder="Digite o nome da Estado">
            @Html.ValidationMessageFor(x => x.DS_ESTADO)
        </div>

        <hr />
        <p>
            <button type="submit" class="btn btn-sm btn-info">Salvar</button>
            <a href="@Url.Action("Index","Home")">Cancelar</a>
        </p>
    </fieldset>
</form>
