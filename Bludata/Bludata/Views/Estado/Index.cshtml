@model  IEnumerable<MySqlASPNetMVC.Models.Estado>
@{
    ViewBag.Title = "Estado";
}

<div class="page-header">
    <h1>Estado <small>organize o cadastro de Estados</small></h1>
    <a href="@Url.Action("Cadastrar","Estado")" class="btn btn-sm btn-primary">Nova Estado</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Estados Cadastradas
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nome da Estado</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var x = 0;}
                        @foreach (var item in Model)
                        {
                            x++;
                            <tr>
                                <td style="width: 50px">@x</td>
                                <td><a href="@Url.Action("Detalhe", "Estado", new { Id = item.CD_ESTADO })">@item.DS_ESTADO</a></td>
                                <td style="width: 100px">
                                    <a href="@Url.Action("Editar", "Estado", new { Id = item.CD_ESTADO })" class="btn btn-info btn-sm">
                                    <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                    <a href="@Url.Action("Excluir", "Estado", new { Id = item.CD_ESTADO })" class="btn btn-danger btn-sm">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
